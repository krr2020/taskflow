{
	"name": "taskflow",
	"private": true,
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@10.27.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"scripts": {
		"build": "pnpm -r --filter '@krr2020/*' run build",
		"build:core": "pnpm --filter './packages/core' run build",
		"build:mcp-server": "pnpm --filter './packages/mcp-server' run build",
		"build:ui": "pnpm --filter './packages/ui' run build",
		"type-check": "pnpm -r --filter './packages/*' run type-check",
		"test": "pnpm -r --filter './packages/*' run test",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"lint:unsafe": "biome check --write --unsafe .",
		"clean": "node scripts/clean.js"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "22.12.0",
		"@vitest/coverage-v8": "4.0.16",
		"@vitest/ui": "4.0.16",
		"tsx": "4.21.0",
		"typescript": "5.8.2",
		"vitest": "4.0.16"
	}
}
